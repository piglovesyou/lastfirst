
/* style.styl */

@import 'nib'
@import './lib/extention'
global-reset()



BG_DARK = #222
FONT_COLOR_ON_DARK = #fff



@font-face
  font-family: 'Dingbats2SamplerOT'
  src: url('Dingbats2SamplerOT.otf') format('opentype')
.i
  font-family: 'Dingbats2SamplerOT'

html
body
.wrapper
  height 100%
body
  overflow-x hidden
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
  color #555

a
  color: #00B7FF


#post-form #indicator
  vertical-align: middle

.loading
  background: url(/images/loading.gif) scroll 0 0 no-repeat

.warn
  color: #f99

.like
  color: #ccc
  cursor: pointer

.like:hover
  color: #e3e3e3

.liked
  color: #f33


@import time


.toolbar
  clearfix()
  box-shadow-depth()
  padding 0 10px
  background-color BG_DARK
  line-height 28px
  & a
    color #fff
    text-decoration none
  & a:hover
    text-decoration underline

  & .logo
    float left
    font-weight bold
    margin-right 24px
    & a
      color #999
  & .buttons
    float right
    & a
      margin-left 8px
  & .message
    overflow ellipsis
    & .msg-important
      padding 2px 1px
      background-color #f22
      color: #fff
    & .msg-general
      color: #fff


itemWidth = 190px
itemHeight = 240px
itemHorizontalMargin = 30px

HUNDRED_PERCENT = 100%

@import field-grid

@import word


