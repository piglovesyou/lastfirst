#post-form #indicator
  vertical-align: middle

.loading
  background: url(/images/loading.gif) scroll 0 0 no-repeat

.warn
  color: #f99

.like
  color: #ccc
  cursor: pointer

.like:hover
  color: #e3e3e3

.liked
  color: #f33


@import time


.toolbar
  clearfix()
  box-shadow-depth()
  padding 0 10px
  background-color BG_DARK
  line-height 28px
  & a
    color #fff
    text-decoration none
  & a:hover
    text-decoration underline

  & .logo
    float left
    font-weight bold
    margin-right 8px
  & .buttons
    float right
    & a
      margin-left 8px
  & .message
    overflow ellipsis
    & .msg-important
      padding 2px 1px
      background-color #f22
    & .msg-general
      color: #fff


@import field-grid



