
/* style.styl */

@import 'nib'
@import './lib/extention'
global-reset()



BG_DARK = #222
FONT_COLOR_ON_DARK = #fff



@font-face
  font-family: 'Dingbats2SamplerOT'
  src: url('Dingbats2SamplerOT.otf') format('opentype')
.i
  font-family: 'Dingbats2SamplerOT'

html
body
.wrapper
  height 100%
body
  overflow-x hidden
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif

a
  color: #00B7FF



