!!!
html
  head
    title= title
    meta(name="viewport", content="width=device-width,initial-scale=1.0,user-scalable=no,maximum-scale=1")
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/mobile.css', media="only screen and (max-width: 800px)")
    script(src='/javascripts/libs/head.load.min.js')
    script
      var clientjs = !{isProduction} ? '/javascripts/client.min.js' : '/javascripts/client.js';
      head.js(
        '/socket.io/socket.io.js'
      , '/javascripts/libs/underscore-min.js'
      , '/javascripts/libs/jquery-1.7.min.js'
      , clientjs);
      window.noAuthForDev = !{noAuthForDev}
    - if (isProduction)
      include google-analytics
  - if (noAuthForDev)
    | noAuthForDev..
  body.not-logged-in!= body
